    // Add your site or application content here
    .header
      .navbar.navbar-default(role='navigation')
        .container
          .navbar-header
            <% if (bootstrap) { %>
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#js-navbar-collapse")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            <% } %>
            a.navbar-brand(href="#/") <%= appname %>
          <% if (bootstrap) { %>
          .collapse.navbar-collapse#js-navbar-collapse
          <% } else { %>
          .collapse
          <% } %>
            ul.nav.navbar-nav
              li.active: a(href="#/") Home
              li: a(ng-href="<% if (ngRoute) { %>#/about<% } else { %>#/<% } %>") About
              li: a(ng-href="#/") Contact
    .container
      <% if (ngRoute) {
        %>div(ng-view)<%
      } else {
        %>div(ng-include="'views/main.html'" ng-controller="MainCtrl")<%
      } %>
    .footer
      .container
        p
          span.glyphicon.glyphicon-heart
          |  from the Yeoman team
